{
    "name": "cocoon-projet/config",
    "description": "Gestionnaire de configuration pour PHP 8+",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Cocoon Projet",
            "email": "contact@cocoon-projet.fr"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "symfony/finder": "^3.4",
        "tracy/tracy": "^2.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan-strict-rules": "^1.5",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Cocoon\\Config\\": "src/Cocoon/Config/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cocoon\\Config\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html build/coverage",
        "test-coverage-text": "phpunit --coverage-text",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
